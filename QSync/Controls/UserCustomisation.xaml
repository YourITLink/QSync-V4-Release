<Window x:Class="QSync.Controls.UserCustomisation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QSync.Controls"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
        xmlns:extToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit/extended"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        TextElement.Foreground="{DynamicResource WordBlueBrush}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="{StaticResource FontSizeRegular}"
        FontFamily="{StaticResource App}"
        mc:Ignorable="d"
        Height="721" Width="1537.717" ScrollViewer.CanContentScroll="True"
        Icon="/QSync;component/Resources/QSync_Q.png" WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Window.Resources>
        <RoutedUICommand x:Key="FirstCommand" Text="Save"/>
        <RoutedUICommand x:Key="LastCommand" Text="Close"/>
        <RoutedUICommand x:Key="NextCommand" Text="Next"/>
        <RoutedUICommand x:Key="PreviousCommand" Text="Previous"/>
        <RoutedUICommand x:Key="DeleteCustomerCommand" Text="Delete Customer"/>
        <RoutedUICommand x:Key="DeleteOrderCommand" Text="Delete Order"/>
        <RoutedUICommand x:Key="UpdateCommand" Text="Update"/>
        <RoutedUICommand x:Key="AddCommand" Text="Add"/>
        <RoutedUICommand x:Key="CancelCommand" Text="Cancel"/>
        <RoutedUICommand x:Key="CommitInvoice" Text="Commit"/>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource FirstCommand}" Executed="FirstCommandHandler"/>
        <CommandBinding Command="{StaticResource LastCommand}" Executed="LastCommandHandler"/>
        <CommandBinding Command="{StaticResource NextCommand}" Executed="NextCommandHandler"/>
        <CommandBinding Command="{StaticResource PreviousCommand}" Executed="PreviousCommandHandler"/>
        <CommandBinding Command="{StaticResource DeleteCustomerCommand}" Executed="DeleteCustomerCommandHandler"/>
        <CommandBinding Command="{StaticResource DeleteOrderCommand}" Executed="DeleteOrderCommandHandler"/>
        <CommandBinding Command="{StaticResource UpdateCommand}" Executed="UpdateCommandHandler"/>
        <CommandBinding Command="{StaticResource AddCommand}" Executed="AddCommandHandler"/>
        <CommandBinding Command="{StaticResource CancelCommand}" Executed="CancelCommandHandler"/>
    </Window.CommandBindings>


    <DockPanel>
        <!-- File Menu -->
        <Menu DockPanel.Dock="Top" Margin="0,0,0.4,0">
            <MenuItem x:Name="fileMenu" Header="File" FontSize="18">
                <MenuItem Header="New Quote" Click="OpenQuotes_Click" InputGestureText="Ctrl+Q"/>
                <MenuItem Header="New Invoice" Click="OpenInvoices_Click" />
                <MenuItem Header="Enter Service" Click="OpenServices_Click" />
                <Separator />
                <MenuItem Header="Main Menu" Click="MainMenu_Click" />
                <MenuItem Header="Exit QSync" Click="CloseQSync_Click" />
            </MenuItem>
            <MenuItem x:Name="fileQuotes" Header="Quotes" FontSize="18" Visibility="Collapsed">
                <MenuItem Header="Create a Quote" Click="OpenQuotes_Click" InputGestureText="Ctrl+Q" />
                <MenuItem Header="Search for a Quote" Click="SearchQuotes_Click" InputGestureText="Ctrl+F" />
                <MenuItem Header="QSync Email System" Click="OpenQuotes_Click" InputGestureText="Ctrl+E" />
            </MenuItem>
            <MenuItem x:Name="fileService" Header="Service" FontSize="18" Visibility="Visible">
                <MenuItem Header="View Customers" Click="OpenServices_Click"  />
                <MenuItem Header="Return DSR's" Click="OpenServices_Click"  />
                <MenuItem Header="Create DSR's" Click="OpenServices_Click" />
            </MenuItem>
            <MenuItem x:Name="fileInvoices" Header="Invoices" FontSize="18" Visibility="Collapsed">
                <MenuItem Header="New Dummy Invoice" Click="OpenInvoices_Click" />
                <MenuItem Header="Load Invoices" Click="OpenInvoices_Click" />
                <MenuItem Header="Find a Dummy Invoice" Click="OpenInvoices_Click" />
            </MenuItem>
            <MenuItem x:Name="fileShutter" Header="Shutter Profiller" FontSize="18" Visibility="Collapsed">
                <MenuItem Header="Build a Door" />
                <MenuItem Header="Lookup Previous" />
            </MenuItem>
            <MenuItem x:Name="fileCustom" Header="Customise" FontSize="18">
                <MenuItem Header="My Settings" Click="UserSettings_Click" />
            </MenuItem>
            <MenuItem x:Name="fileManager" Header="Manager Menu" FontSize="18" Visibility="Collapsed">
                <MenuItem Header="QSync Maintenance"  />
                <MenuItem Header="Reset User Password"  />
                <MenuItem Header="Access Levels"  />
                <MenuItem Header="Quote Conditions" />
            </MenuItem>
            <MenuItem x:Name="fileDev" Header="Your IT Link" FontSize="18" Visibility="Collapsed">
                <MenuItem Header="Build Changes"  />
                <MenuItem Header="TEST - Email" Click="Email_Click"/>
                <MenuItem Header="Load Settings" Click="showSettings_Click"  />
            </MenuItem>
            <MenuItem Header="About" Click="about_Click" FontSize="18"/>
        </Menu>

        <DockPanel Margin="0">
            <StackPanel VerticalAlignment="Top" DockPanel.Dock="Top" Height="70">
                <materialDesign:DrawerHost Height="69">
                    <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryDark" DockPanel.Dock="Top" Background="#FF263B8F">
                        <Grid>
                            <TextBlock x:Name="lblLocation" Foreground="GhostWhite" Text="lblLocation" FontSize="22" HorizontalAlignment="Left" DockPanel.Dock="Left"></TextBlock>
                            <TextBlock x:Name="title" FontSize="22" Margin="0" Foreground="#FFFDD835" HorizontalAlignment="Center">
                                <Run Text=""></Run></TextBlock>
                        </Grid>
                    </materialDesign:ColorZone>
                </materialDesign:DrawerHost>
            </StackPanel>

            <!-- Footer placeholder -->
            <Frame DockPanel.Dock="Bottom" x:Name="Footer" />

            <!-- Command Buttons -->
            <Grid Margin="0,-0.333">
                <StackPanel x:Name="formBtnGrp" Orientation="Vertical" Margin="0,76,0,0" HorizontalAlignment="Left" Visibility="Visible">
                    <Button x:Name="nameBtn1" Content="Save" Grid.Row="2" FontSize="18" Grid.Column="0" Command="{StaticResource FirstCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Width="130" ToolTip="Save changes" Background="#FF1C8C10" BorderBrush="#FF263B8F" Opacity="1" Foreground="#FFFDD835" Margin="10,5" Height="60"/>
                    <Button x:Name="nameBtn2" Content="Close" Grid.Row="2" FontSize="18" Grid.Column="0" Command="{StaticResource PreviousCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Width="130" ToolTip="Close user settings" BorderBrush="#FF263B8F" Foreground="#FFFDD835" Opacity="1" Background="#FF263B8F" Margin="10,5" Height="60"/>
                    <Button x:Name="nameBtn3" Visibility="Collapsed" Content="Reload Current" Grid.Row="2" FontSize="12" Grid.Column="11" Command="{StaticResource NextCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Width="130" ToolTip="Load Next Quote" Opacity="1" Background="#FF263B8F" BorderBrush="#FF263B8F" Foreground="#FFFDD835" Margin="10,5" Height="60"/>
                    <Button x:Name="nameBtn4" Visibility="Collapsed" Content="Reset to Default" Grid.Row="2" FontSize="12" Grid.Column="12" Command="{StaticResource LastCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Width="130" ToolTip="Load Newest Quote" BorderBrush="#FF263B8F" Foreground="#FFFDD835" Opacity="1" Background="#FF263B8F" Margin="10,5" Height="60"/>
                    <Button x:Name="mgrSave" Visibility="Visible" Content="Save Other" Grid.Row="2" FontSize="18" Grid.Column="12" Click="mgrChanges_Click" Style="{StaticResource MaterialDesignRaisedButton}" Width="130" ToolTip="Load Newest Quote" BorderBrush="#FF263B8F" Foreground="#ff263B8f" Opacity="1" Background="#ff5500" Margin="10,5" Height="60"/>
                </StackPanel>
            </Grid>


            <Grid x:Name="emailContents" Margin="0,26,0,14" Visibility="Visible" Background="Transparent">
                <!-- User settings display -->

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label>Basic Settings</Label>
                <TextBox x:Name="Username" materialDesign:HintAssist.Hint="QSync Username (*)" Grid.Column="0" Grid.Row="1" Margin="10,6,10,7" Text="{Binding MyUser, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="50" IsEnabled="False"/>
                <TextBox x:Name="Name" materialDesign:HintAssist.Hint="Name (*)"  Grid.Column="0" Grid.Row="2" Text="{Binding Name, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50" IsEnabled="False"/>
                <TextBox x:Name="al" materialDesign:HintAssist.Hint="QSync Access Level (*)"  Grid.Column="0" Grid.Row="3" Text="{Binding Accesslevel, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50" IsEnabled="False"/>
                <TextBox x:Name="qid" materialDesign:HintAssist.Hint="Quote ID (*)"  Grid.Column="0" Grid.Row="4" Text="{Binding Qid, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50"/>
                <TextBox x:Name="syspw" materialDesign:HintAssist.Hint="QSync Password (*)"  Grid.Column="0" Grid.Row="5" Text="N/A" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50"/>
                <TextBox x:Name="stdEmail" materialDesign:HintAssist.Hint="Quick Email Template" HorizontalAlignment="Left" Height="165" Margin="10,76.667,0,0" Grid.Column="0" Grid.Row="5" Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" Text="{Binding stdEmailTemplate, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" HorizontalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True" Width="671" Grid.RowSpan="5"/>
                <Label Grid.Column="1" Grid.Row="0" Content="User Email Configuration - Defines where emails are sent from within QSync"/>
                <TextBox x:Name="selsmtp" materialDesign:HintAssist.Hint="SMTP Address"  Grid.Column="1" Grid.Row="1" Text="{Binding userSMTP, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50"/>
                <TextBox x:Name="selsmtpport" materialDesign:HintAssist.Hint="SMTP Port"  Grid.Column="1" Grid.Row="2" Text="{Binding userSMTPPort, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50"/>
                <TextBox x:Name="selusername" materialDesign:HintAssist.Hint="Email Username"  Grid.Column="1" Grid.Row="3" Text="{Binding userEmail, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,2,10,5" Height="50"/>
                <TextBox x:Name="selpassword" materialDesign:HintAssist.Hint="Email Password" Visibility="Visible" Grid.Column="1" Grid.Row="4" Text="{Binding userPW, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10.333,3,174.333,5.667" Height="50"/>
                <Button x:Name="updatePW" Content="Set Email PW" Grid.Row="4" FontSize="12" Grid.Column="1" Click="setEmailPW_Click" Style="{StaticResource MaterialDesignRaisedButton}" Width="130" ToolTip="Save PW change" Background="#FF263B8F" BorderBrush="#FF263B8F" Opacity="1" Foreground="#FFFDD835" Margin="407,5,-105,5" Height="30"/>
                <TextBox x:Name="customEmail" materialDesign:HintAssist.Hint="Custom Email Template" HorizontalAlignment="Left" Height="240" Margin="9.333,1.667,0,-0.333" Grid.Column="1" Grid.Row="5" Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" Text="{Binding customEmailTemplate, NotifyOnValidationError=True, Source={StaticResource Settings}, ValidatesOnExceptions=True}" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" HorizontalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True" Width="671" Grid.RowSpan="5"/>

            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
